@model Employee

@{
    ViewData["Title"] = "Details";
}

<h1 class="my-4">Employee Details</h1>

<div class="container">

    <div class="row justify-content-center">
        <div class="card" style="width:300px">
            <div class="card-body">
                <h4 class="card-title">@Model?.Name</h4>
                <p class="card-text">ID : @Model?.Id</p>
                <p class="card-text">Email : @Model?.Email</p>
                <p class="card-text">Phone : @Model?.Phone</p>

                <p class="card-text">Address :@Model?.Address</p>
                <p class="card-text">Creation Date : @Model?.creationDate</p>
                <p class="card-text">Is Deleted : @Model?.IsDeleted</p>


                <a class="btn btn-outline-secondary me-3" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                <a class="btn btn-outline-secondary ms-3" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>
