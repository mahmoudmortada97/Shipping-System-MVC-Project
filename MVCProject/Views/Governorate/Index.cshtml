@model List<Governorate>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Create</a>

<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name </th>  
        <th></th>
        <th></th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr id="row_@item.Id">
            <td>@item.Id </td>
            <td>@item.Name</td>
            <td><a href="/Governorate/Edit/@item.Id">Edit</a></td>
            <td>
                <input type="submit" class="btn btn-danger" value="Delete" onclick="Delete(@item.Id)" />
            </td>
            <td>
                <a asp-action="Create" asp-controller="City" asp-route-id="@item.Id" class="btn btn-success">Add New City</a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Governorate" asp-route-id="@item.Id" class="btn btn-success">Details</a>
            </td>
        </tr>
    }
</table>
@section Scripts
    {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        function Delete(id) {
          if(confirm(`Are you sure you want delete this item `))
          {

            $.ajax({
                type: "POST",
                url: `@Url.Action("Delete")`,
                data: { id: id },
                dataType: "text",
                success: function (response) {
                    if (response.trim() == "sucsses") {
                        $("#row_" + id).remove()
                    }
                },
                error: function () {
                    alert("Error while deleting data");
                }
            });
          }

        }
    </script>
}