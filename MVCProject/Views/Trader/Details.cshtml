@model MVCProject.Models.Trader

@{
    ViewData["Title"] = "Details";
}

<h1>Trader Details</h1>

<div class="container">

    <div class="row justify-content-center">

        <div class="card col-md-8" style="width:300px">
            <div class="card-body row">
                <h4 class="card-title col-sm-12">@Model?.Name</h4>
                <p class="card-text col-sm-6">ID : </p> <p class="col-sm-6">@Model?.Id</p>
                <p class="card-text col-sm-6">Email : </p> <p class="col-sm-6">@Model?.Email</p>
                <p class="card-text col-sm-6">Branch : </p> <p class="col-sm-6">@Model?.Branch?.Name</p>
                <p class="card-text col-sm-6">Phone : </p> <p class="col-sm-6">@Model?.Phone</p>
                <p class="card-text col-sm-6">Address : </p> <p class="col-sm-6">@Model?.Address</p>
                <p class="card-text col-sm-6">Role : </p> <p class="col-sm-6">Trader</p>
                <p class="card-text col-sm-6">Store Name : </p> <p class="col-sm-6">@Model?.StoreName</p>
                <p class="card-text col-sm-6">Governorate : </p> <p class="col-sm-6">@Model?.Governorate?.Name</p>
                <p class="card-text col-sm-6">City : </p> <p class="col-sm-6">@Model?.City?.Name</p>
                <p class="card-text col-sm-6">Special Pickup Cost : </p> <p class="col-sm-6">@Model?.SpecialPickupCost</p>
                <p class="card-text col-sm-6">Trader Tax For Rejected Orders : </p> <p class="col-sm-6">@Model?.TraderTaxForRejectedOrders</p>
                <p class="card-text col-sm-6">Creation Date : </p> <p class="col-sm-6">@Model?.creationDate</p>
                <p class="card-text col-sm-6">Status : </p> <p class="col-sm-6">@(Model.IsDeleted ? "Unavailable" : "Available")</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 text-center my-3">
        <a class="btn btn-outline-success me-5" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a class="btn btn-outline-secondary ms-5" asp-action="Index">Back to List</a>
    </div>

</div>
